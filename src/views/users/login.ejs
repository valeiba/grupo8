<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head') %>
  <body>
    <%- include('./../partials/header') %>
    <section class="main-form">
      <div class="container-form">
        <form id="form" class="main-form" action="/users/login" method="POST">
          <h4>¡Qué gusto volver a verte!</h4>
          <input
            class="controls"
            type="email"
            name="email"
            id="email"
            placeholder="Ingresa tu e-mail"
          />
          <input
            class="controls"
            type="password"
            name="password"
            id="password"
            placeholder="Ingresa tu contraseña"
          />
          <span>Olvidé mi contraseña</span>
          <input class="bottons" type="submit" value="Iniciar sesión" />
        </form>
      </div>
    </section>
    <script type="module" src="/js/login.js"></script>
    <%- include('../partials/scripts') %>
  </body>
</html>
