<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head') %>
  <body>
    <%- include('./../partials/navbar') %>
    <section class="section">
      <div class="divided-screen">
        <div>
          <form id="form" class="form" action="users/register" enctype="multipart/form-data" method="POST">
            <h2>Registrate en Tienda Orgánica</h2>
            <input
              class="controls <%= locals.errors && errors.name ? 'is-invalid' : null %>"
              type="text"
              name="firstName"
              id="firstName"
              placeholder="Nombre"
              value="<%= locals.oldData ? oldData.firstName : null %>"
            />
            <% if (locals.errors && errors.firstName) { %>
            <div class="text-danger"><%= errors.firstName.msg %></div>

            <% } %>

            <input
              class="controls <%= locals.errors && errors.lastName ? 'is-invalid' : null %>"
              type="text"
              name="lastName"
              id="lastName"
              placeholder="Apellido"
              value="<%= locals.oldData ? oldData.lastName : null %>"
            />
            <% if (locals.errors && errors.lastName) { %>
            <div class="text-danger"><%= errors.lastName.msg %></div>

            <% } %>
            <input
              class="controls <%= locals.errors && errors.email ? 'is-invalid' : null %>"
              type="text"
              name="email"
              id="email"
              placeholder="E-mail"
              value="<%= locals.oldData ? oldData.email : null %>"
            />
            <% if (locals.errors && errors.email) { %>
            <div class="text-danger"><%= errors.email.msg %></div>

            <% } %>
            <input
              class="controls <%= locals.errors && errors.password? 'is-invalid' : null %>"
              type="password"
              name="password"
              id="password"
              placeholder="Contraseña"
              value="<%= locals.oldData ? oldData.password : null %>"
            />
            <% if (locals.errors && errors.password) { %>
            <div class="text-danger"><%= errors.password.msg %></div>
            <% } %>
            <label class="mb-2" for="avatar">Imagen de Perfil</label>
            <input
              class="<%= locals.errors && errors.avatar ? 'is-invalid' : null %>"
              type="file"
              id="avatar"
              name="avatar"
            />
            <% if (locals.errors && errors.avatar) { %>
            <span class="text-danger"><%= errors.avatar.msg %> <i class="fa-solid fa-circle-exclamation"></i></span>
            <% } %>
            <p>Estoy de acuerdo con los <a href="#">Términos y Condiciones</a></p>
            <button id="" class="" type="submit">Registrarme</button>
            <p><a href="/users/login">Ya estoy registrado</a></p>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
