<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head') %>
  <body>
    <%- include('./../partials/header') %>
    
    <section class="products__grid-layout container">
      <div class="products__categories">
        <div class="products__categories-header">
          <h2 class="">Categor√≠as</h2>
          <div id="btn-collapse"><i class="fa-solid fa-chevron-down"></i></div>
        </div>
        <ul id="categories-links" class="products__categories-links is-open">
          <li><a href="/products/" class="">Todos los productos</a></li>
          <li><a href="#" class="">Frutas</a></li>
          <li><a href="#" class="">Verduras</a></li>
          <li><a href="#" class="">Canastas</a></li>
        </ul>
      </div>
      <div class="products">
        <% products.forEach(product => { %> 
        <article class="product-card">
          <img src="img/products/<%= product.image %>" alt="" class="product-card__img" />
          <div class="product-card__details">
            <h2 class="product-card__title"><%= product.name %> </h2>
            <span class="product-card__price">$<%= product.price %> </span>
          </div>
          <button class="product-card__button">Comprar</button>
        </article>
        <% }) %> 
      </div>
    </section>

    <%- include('./../partials/footer') %>
    <%- include('./../partials/scripts') %>
  </body>
</html>
