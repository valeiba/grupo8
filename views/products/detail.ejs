<!DOCTYPE html>
<html lang="en">
  <%- include('./../partials/head') %>
  <body>
    <%- include('./../partials/header') %>
    <section>
      <article class="detalle-producto">
        <div class="fotoproducto">
          <img src="" alt="foto de producto" />
        </div>
        <div class="titulo-produc">
          <h3><%= product.name %></h3>
          <h4>$<%= product.price %> </h4>
          <h4><label>Cantidad</label></h4>
          <h5>
            <select>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </h5>
          <div class="confirmar">
            <button type="submit">Confirmar pedido</button>
          </div>
        </div>
      </article>
    </section>
    <div class="iconocarro">
      <i class="fas fa-shopping-cart"></i>
    </div>
    <%- include('./../partials/footer') %>
    <%- include('./../partials/scripts') %>
  </body>
</html>
